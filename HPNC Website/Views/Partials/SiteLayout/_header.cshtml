@inherits Umbraco.Web.Mvc.UmbracoViewPage<List<NavigationListItem>>
@using HPNC_Website.Models 

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a href="~/" title="">
                <img src="/media/1050/hpnc-logo-1.png" class="img-responsive topnav-logo" alt="">
            </a><a href="#" class="topnav-donate-btn-mobile">DONATE</a>
            <img src="/media/1052/hpnc-logo-fam.png" class="img-responsive topnav-logo-fam" alt="Learn, Thrive, Grow">
        </div>
    </div>
</div>

<nav class="navbar">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @RenderChildItems(Model)
            </ul>

            <ul class="nav navbar-nav topnav-donate">
                <li><a href="~/donate" class="topnav-donate-btn">DONATE</a></li>
            </ul>



        </div>
    </div>
</nav>


@helper RenderChildItems(List<NavigationListItem> listItems)
{
if (listItems != null)
{
    foreach (var item in listItems)
    {
            <li>
                @if (!String.IsNullOrEmpty(item.Text))
                {
                    @item.Text
                }
                else if (item.Link != null)
                {
                    <a href="@item.Link.Url" class="@(Umbraco.AssignedContentItem.Url == item.Link.Url ? "active" : null) @(item.HasChildren ? "fh5co-sub-ddown" : null)" target="@item.Link.Target">@item.Link.Text</a>
                }

                @if (item.HasChildren)
                {
                    <ul class="sub-menu">
                        @RenderChildItems(item.Items)
                    </ul>
                }
            </li>
    }
}
}




